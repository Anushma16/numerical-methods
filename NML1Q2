#include <iostream>
#include <cmath>
using namespace std;
double f(double x){
    return (x*x + 4*x - 9);
}
double df(double x)
{
    return (2*x + 4);
}
int main(){
    double x0, x1, fx, dfx;
    double tolerance = 0.00001;
    int iteration = 0;

    cout << "Enter initial guess: ";
    cin >> x0;
    do{
        fx = f(x0);
        dfx = df(x0);

        // Check for division by zero
        if (dfx == 0)
        {
            cout << "Derivative is zero. Newton's method fails." << endl;
            return 0;
        }

        x1 = x0 - (fx / dfx);
        x0 = x1;

        iteration++;

    } while (fabs(f(x1)) > tolerance);

    cout << "\nEstimated Root = " << x1 << endl;
    cout << "Functional Value at Root = " << f(x1) << endl;
    cout << "Number of Iterations = " << iteration << endl;

    return 0;
}
