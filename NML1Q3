#include <stdio.h>
#include <math.h>

double f(double x)
{
    return (x*x*x + x*x - 3*x - 3);  
}

int main()
{
    double x0, x1, x2, tol;
    int maxiter, iter = 0;

    printf("Enter first initial guess x0: ");
    scanf("%lf", &x0);

    printf("Enter second initial guess x1: ");
    scanf("%lf", &x1);

    printf("Enter tolerance: ");
    scanf("%lf", &tol);

    printf("Enter maximum number of iterations: ");
    scanf("%d", &maxiter);

    while (iter < maxiter)
    {
        if (fabs(f(x1) - f(x0)) < 1e-12)
        {
            printf("Division by zero error.\n");
            return 0;
        }

        x2 = x1 - (f(x1) * (x1 - x0)) / (f(x1) - f(x0));

        if (fabs(x2 - x1) < tol)
        {
            printf("\nSolution obtained.\n");
            printf("Estimated root = %lf\n", x2);
            printf("Functional value at root f(x) = %lf\n", f(x2));
            printf("Number of iterations = %d\n", iter + 1);
            return 0;
        }

        x0 = x1;
        x1 = x2;
        iter++;
    }

    printf("\nSolution not obtained within given iterations.\n");
    return 0;
}
